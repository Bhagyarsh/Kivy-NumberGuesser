<Container>:
    orientation: "vertical"
    size_hint: 1, None
    padding: 10
    spacing: 10
    size:600,250

    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle:
            pos: self.pos  # incorrect
            size: self.size
    BoxLayout:
        spacing: 10
        orientation: "vertical"
        size_hint: 1, None
        size: mylabel.width,mylabel.height*2 +10
        height: "40dp"
        pos:400,100
        # canvas:
        #     Color:
        #         rgba: 0, 1, 0, 0.5
        #     Rectangle:
        #         pos: self.pos  # incorrect
        #         size: self.size
        Label:
            id: mylabel1
            text: "Take any number from 0 to 1000 and i will guess it"
            font_size: '19dp'
        Label:
            id: mylabel
            text: "Is your number is 500 ?"
            font_size: '19dp'
    BoxLayout:
        size_hint: 1, None
        id: 'boxlayout'
        size: Button1.width *2,Button2.height+20
        orientation: "horizontal"
        padding: 10
        spacing: 10
        # canvas:
        #     Color:
        #         rgba: 1, 0, 0, 0.5
        #     Rectangle:
        #         pos: self.pos  # incorrect
        #         size: self.size
        Button:
            id:Button1
            text: "high"
            size_hint:1,None
            size:100,50
            on_press:root.Button_high()

        Button:
            id:Button2
            text: "Lower"
            size_hint:1,None
            size: 100,50
            on_press:root.Button_low()

    BoxLayout:
        size_hint: 1, None
        id: 'boxlayout'
        size: Button1.width *2,Button2.height+20
        orientation: "horizontal"
        padding: 10
        spacing: 10
        Button:
            text: "yes"
            size_hint:1,None
            size: 100,50
            on_press:root.Button_yes()
